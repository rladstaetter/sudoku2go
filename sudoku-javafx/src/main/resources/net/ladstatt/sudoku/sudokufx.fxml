<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="830.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.ladstatt.sudoku.SudokuFXController">
    <Accordion>
        <panes>
            <TitledPane text="Statistics">
                <HBox>
                    <TitledPane text="Frame number"/>
                    <TitledPane text="Detected Sudokus"/>
                    <TitledPane text="Last detection numbers"/>
                    <TitledPane text="Frame rate"/>
                </HBox>
            </TitledPane>

            <TitledPane text="Moar Statistics">
                <HBox>
                    <FlowPane fx:id="statsFlowPane"/>
                    <FlowPane fx:id="resultFlowPane"/>
                    <FlowPane fx:id="numberFlowPane"/>
                    <Label fx:id="statusLabel" ellipsisString="" layoutX="11.0" layoutY="713.0"
                           text="State of the application" textFill="BLACK">
                        <font>
                            <Font name="Alpha Echo" size="20.0"/>
                        </font>
                    </Label>
                    <ToolBar fx:id="templateToolBar" layoutY="135.0" style="-fx-padding: 0 0 0 0;-fx-margin: 0 0 0 0;">
                    </ToolBar>
                </HBox>
            </TitledPane>
            <TitledPane text="Phases">
                <content>
                    <ToolBar prefHeight="30.0" prefWidth="1280.0">
                        <items>
                            <ToggleButton fx:id="inputButton" mnemonicParsing="false" selected="true" text="Input">
                                <toggleGroup>
                                    <ToggleGroup fx:id="viewButtons"/>
                                </toggleGroup>
                            </ToggleButton>
                            <ToggleButton fx:id="grayedButton" mnemonicParsing="false" text="Grayed"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="blurredButton" mnemonicParsing="false" text="Blurred"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="thresholdedButton" mnemonicParsing="false" text="Thresholded"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="invertedButton" mnemonicParsing="false" text="Inverted"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="dilatedButton" mnemonicParsing="false" text="Dilated"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="erodedButton" mnemonicParsing="false" text="Eroded"
                                          toggleGroup="$viewButtons"/>
                            <ToggleButton fx:id="solutionButton" mnemonicParsing="false" text="Solution"
                                          toggleGroup="$viewButtons"/>
                            <ChoiceBox fx:id="contourModeChoiceBox"/>
                            <ChoiceBox fx:id="contourMethodChoiceBox"/>
                            <ChoiceBox fx:id="contourRatioChoiceBox"/>
                        </items>
                    </ToolBar>
                </content>
            </TitledPane>
        </panes>
    </Accordion>
    <BorderPane>
        <left>
            <ImageView fx:id="videoView" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true"/>
        </left>
        <right>
            <VBox>
                <children>
                    <ImageView fx:id="normalizedView" fitWidth="500.0" pickOnBounds="true" preserveRatio="true"/>
                    <ImageView fx:id="solutionView" fitWidth="500.0" pickOnBounds="true" preserveRatio="true"/>
                </children>
            </VBox>
        </right>
        <bottom>
            <Button fx:id="resetButton" onAction="#resetState" text="reset" BorderPane.alignment="CENTER"/>
        </bottom>
        <top>
            <ToolBar fx:id="digitToolBar"/>
        </top>
    </BorderPane>

</VBox>
